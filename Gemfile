source "https://rubygems.org"

# This specifies the version of Bundler to use.
# It's a good practice for consistency.
gem "bundler", "~> 2.3"

# This is the gem for Jekyll itself. 
# github-pages gem locks this to an older version, so we specify it directly.
gem "jekyll", "~> 4.3.3"

# This is the key part: add your custom plugin!
gem "jekyll-katex"

# Optional but recommended: these are plugins that GitHub Pages uses by default.
# It's good to include them for compatibility.
gem "jekyll-seo-tag", "~> 2.8"
gem "jekyll-feed", "~> 0.17.0"